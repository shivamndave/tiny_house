var homeController = angular.module('appController', []);

homeController.controller('HomeController', function($scope) {
    $scope.message = 'Welcome to Page';
});

homeController.directive('mgDisplay', function(){
	return {
		restrict: 'E',
		scope: false,
		templateUrl: './home/templates/display.html'
	}
});

homeController.controller('DisplayController', function($scope) {
    $scope.sensor_info_name = 'sensor_info.name';
    $scope.sensor_info_info = 'sensor_info.info';

    $scope.equipment_name = 'equipment.name';
    $scope.equipment_location = 'equipment.location';
    $scope.equipment_info = 'equipment.info';

    $scope.actuator_name = 'actuator.name';
    $scope.actuator_info = 'actuator.info';

    $scope.list = [1, 2, 3]
});
